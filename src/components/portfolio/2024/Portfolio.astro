---
import Styles from "./helpers/Styles.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "./Header";
import Intro from "./Intro";
import About from "./About";
import Experience from "./Experience";
import FeaturedProjects from "./FeaturedProjects";
import Projects from "./Projects";
import Skills from "./Skills";
import Contact from "./Contact";
import Footer from "./Footer";
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<Layout title="Rares Cozma | 2024 Portfolio">
  <Styles />
  <div
    class="bg-gray-100 font-default text-gray-950 dark:bg-gray-900 dark:text-gray-50"
  >
    <div
      class="absolute right-0 top-16 -z-10 h-80 w-[25rem] rounded-full bg-purple-200 blur-[100px] dark:bg-emerald-800 sm:right-8 sm:h-[30rem] sm:w-[45rem] xl:right-48"
    >
    </div>
    <div
      class="absolute -top-32 right-0 -z-10 h-80 w-[30rem] rounded-full bg-pink-200 blur-[100px] dark:bg-cyan-800 sm:[right:initial] md:left-8 md:h-[25rem] md:w-[40rem] lg:left-12 xl:left-60"
    >
    </div>
    <Header />
    <main class="mb-20 overflow-x-hidden px-4 pt-24 sm:pt-0">
      <Intro client:load />
      <About />
      <Experience />
      <FeaturedProjects />
      <Projects client:load />
      <Skills />
      <Contact />
    </main>
    <Footer />
    <ThemeSwitcher />
  </div>
</Layout>
